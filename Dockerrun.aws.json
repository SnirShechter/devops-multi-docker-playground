{
	"AWSEBDockerrunVersion": 2,
	"containerDefinitions": [
		{
			"name": "client",
			"image": "snirshechter/devops-multi-container-playground-client",
			"hostname": "client",
			"essential": false,
            "memory": 128
		},
		{
			"name": "server",
			"image": "snirshechter/devops-multi-container-playground-server",
			"hostname": "api",
			"essential": false,
            "memory": 128
		},
		{
			"name": "worker",
			"image": "snirshechter/devops-multi-container-playground-worker",
			"hostname": "worker",
			"essential": false,
            "memory": 128
		},
		{
			"name": "nginx",
			"image": "snirshechter/devops-multi-container-playground-nginx",
			"hostname": "nginx",
			"essential": true,
            "memory": 128,
			"portMappings": [
				{
					"hostPort": 80,
					"containerPort": 80
				}
			],
			"links": ["client", "server"]
		}
	]
}
